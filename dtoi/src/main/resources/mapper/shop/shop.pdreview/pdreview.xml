<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="pdreview">

	<select id="count" parameterType="shop.pd_review.PdReviewVo" resultType="int">
		select count(*) as cnt from pd_review
	</select>
	
	<select id="selectList" resultType="shop.pd_review.PdReviewVo">
		select * from pd_review

		ORDER BY regdate desc 
		
	</select>
	
	<select id="selectOne" parameterType="shop.pd_review.PdReviewVo" resultType="shop.pd_review.PdReviewVo">
		select * from pd_review where re_no=${re_no}
	</select>
	
	
	
	
	<insert id="insert" parameterType="shop.pd_review.PdReviewVo">
		INSERT INTO pd_review (
		
			re_no,
			pd_no,
			cst_id,
			re_title,
			re_content,
			re_file,
			re_ori_file,
			re_regdate,
			re_score 
						
		) VALUES (
		
			#{re_no},
			#{pd_no},
			#{cst_id},
			#{re_title},
			#{re_content},
			#{re_file},
			#{re_ori_file},
			NOW(),
			#{re_score}
		)
	</insert>
	

	
	<delete id="delete" parameterType="shop.pd_review.PdReviewVo">
		DELETE FROM pd_review WHERE re_no = #{re_no}
	</delete>

	
</mapper>