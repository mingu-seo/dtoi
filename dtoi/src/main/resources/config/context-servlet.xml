<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
				http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
				http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd">
	
	<!-- 컴퍼넌트 스캔:해당패키지부터 하위패키지의 모든 클래스를 스캔 -->
	
	<context:component-scan base-package="admin"/>
	<context:component-scan base-package="board"/>
	<context:component-scan base-package="util"/>
	<context:component-scan base-package="customer"/>
	<context:component-scan base-package="shop"/>
	
	<!-- 어노테이션 활성화 -->
	<mvc:annotation-driven/>
	
	<!-- DispatchServlet에서 처리하지 못한 요청 처리 예) .html, .js, .css... -->
	<mvc:default-servlet-handler/>
	
	<!-- ViewResolver : 뷰페이지 위치 설정 -->
	<mvc:view-resolvers>
		<mvc:jsp prefix="/WEB-INF/view/"/>
		<mvc:jsp suffix=".jsp"/>
	</mvc:view-resolvers>
	
	<!-- DBCP -->
	<bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
		<property name="driverClassName" value="org.mariadb.jdbc.Driver"/>
		<property name="url" value="jdbc:mariadb://localhost:3306/dtoi"/>
		<property name="username" value="root"/>
		<property name="password" value="db1234"/>
	</bean>
	
	<!-- mybatis -->
	<bean id="sqlSession" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="dataSource"/> <!-- DataSource 객체를 참조 -->
		<property name="mapperLocations" value="classpath:/mapper/**/*.xml"/>
	</bean>
	<!-- DAO에서 주입받아 사용하게될 빈객체 -->
	<bean id="sqlSessionTemplate" class="org.mybatis.spring.SqlSessionTemplate">
		<constructor-arg index="0" ref="sqlSession"></constructor-arg>
	</bean>
	
	<!-- 파일업로드 -->
	<bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
		<!-- 인코딩 캐릭터셋 -->
		<property name="defaultEncoding" value="UTF-8"></property>
		<!-- 최대업로드파일사이즈(바이트단위) -->
		<property name="maxUploadSize" value="100000000"></property>
	</bean>	
		<!-- 관리자 세션을 따로 체크 
		<mvc:interceptor>
			<mvc:mapping path="/admin/user/write.do"/>
			<bean class="interceptor.AdminInterceptor"/>
		</mvc:interceptor>
		 -->
	
	 <!-- 인터셉터 설정 -->
   <mvc:interceptors>
      <mvc:interceptor>
         <mvc:mapping path="/board/bulletin_board/**"/>
         <mvc:exclude-mapping path="/board/bulletin_board/index.do"/>
         <mvc:exclude-mapping path="/board/bulletin_board/detail.do"/>
         <mvc:exclude-mapping path="/customer/edit.do"/>
         <mvc:exclude-mapping path="/customer/write.do"/>
         <!-- 
         한꺼번에 url 매핑
         예) /user/로 시작하는 모든 url 매핑
         <mvc:exclude-mapping path="/user/index.do"/>
         <mvc:exclude-mapping path="/user/login.do"/>
         <mvc:exclude-mapping path="/user/detail.do"/>
          -->
         <bean class="interceptor.UserInterceptor"/>
      </mvc:interceptor>
      <!-- 관리자 세션을 따로 체크 
      <mvc:interceptor>
         <mvc:mapping path="/admin/user/write.do"/>
         <bean class="interceptor.AdminInterceptor"/>
      </mvc:interceptor>
       -->
   </mvc:interceptors>
   
   <!-- 사용자 정적페이지 -->
   
	
	<mvc:view-controller path="/index.do"/>
	<mvc:view-controller path="/admin/index.do"/>
</beans>
	

